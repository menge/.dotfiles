[user]
	name = Emil Meng
	email = emil.meng@gmail.com
[core]
	editor = vim
	excludesfile = /home/menge/.gitignore_global
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = difftool
	dno = diff --name-only
	ds = diff --stat
	diffstat = diff --stat
        fa = fetch --all
	lol = log --oneline --graph --decorate
	lola = log --oneline --graph --decorate --all
	s = status
        veryclean = clean -xdfq
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	#current = yellow reverse
	#local = yellow
	#remote = green
[color "diff"]
	#meta = yellow bold
	#frag = magenta bold
	#old = red
	#new = cyan
[color "status"]
	added = green
	changed = yellow
	untracked = cyan
